<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.huang.server.mapper.RoleMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.huang.server.pojo.Role">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="name_zh" property="nameZh" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name, name_zh
    </sql>


    <select id="getRoles" resultType="com.huang.server.pojo.Role">
        select r.id,
               r.name,
               r.name_zh
        from t_role as r
                 left join t_admin_role ar
                           on r.id = ar.rid
        where ar.admin_id = #{adminId}
    </select>

</mapper>
